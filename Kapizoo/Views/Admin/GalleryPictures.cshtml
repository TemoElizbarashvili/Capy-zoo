@model IEnumerable<GalleryPicture>

    <div class="container">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6 mt-2">
                    <h2>Manage <b>Gallery Pictures</b></h2>
                </div>
                <div class="col-sm-6 mt-2 text-end">
                    <a asp-controller="Admin" asp-action="GalleryPictureUpsert" class="btn btn-outline-success" data-toggle="modal">
                        <i class="fa-solid fa-circle-plus"></i>
                        <span>Add New Picture</span>
                    </a>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-dark">
                    <th>@Html.DisplayNameFor(model => model.GalleryPictureId)</th>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Picture)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.GalleryPictureId</td>
                        <td>@item.Title</td>
                        <td>@item.Picture</td>
                        <td>
                            <a asp-area="" asp-controller="Admin" asp-action="GalleryPictureUpsert" asp-route-galleryPictureId="@item.GalleryPictureId" class="edit m-1" style="text-decoration: none;" data-toggle="modal">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>
                            <a asp-area="" asp-controller="Admin" asp-action="GalleryPictureDelete" asp-route-galleryPictureId="@item.GalleryPictureId" class="delete " data-toggle="modal">
                                <i class="fa-regular fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="clearfix">
            <div class="hint-text">Showing <b>@Model.Count()</b> entries</div>
        </div>
    </div>

