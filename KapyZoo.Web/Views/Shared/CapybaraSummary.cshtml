@using KapyZoo.Shared.Models;
@model Capybara

<div class="card bg-white rounded shadow-sm">
    <div class="card-body">
        <div class="name-price-container">
            <div class="h5">@Model.Name</div>
            <div><span class="text-info h4">@Model.Price.ToString("C")</span></div>
        </div>
        <img class="card-img-top img-fluid mx-auto mb-2 card-img" style="width: 100%; height: 15vw; object-fit:initial;" src="@Model.Image" alt="capy image" />
        <div class="gender-age-container">
            <div>
                    <span class="badge p-2 border w-100 text-dark bg-warning">@Model.Gender</span>
            </div>
            <div>
                <span class="badge p-2 border w-100 text-dark bg-info">Age: @Model.Age</span>
            </div>
        </div>
        <div style="font-size:13px; text-align:justify">
            <p>@Model.Description</p>
        </div>
        <div>
            <form id="addToCartForm" asp-controller="Home" asp-action="Store" method="post">
                <input type="hidden" name="capyId" value="@Model.CapybaraID" />
                <input type="hidden" name="currPg" value="2" />
                <span class="col-12 p-1">
                    <button type="submit" class="btn btn-success form-control btn-sm p-2" style="height:40px">Add to cart</button>
                </span>
            </form>
        </div>
    </div>
</div>