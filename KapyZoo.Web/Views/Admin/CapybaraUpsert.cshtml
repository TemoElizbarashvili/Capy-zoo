@using KapyZoo.Shared.Models;
@model Capybara



<form asp-area="" asp-controller="Admin" asp-action="CapybaraUpsert" method="post" class="m-2" enctype="multipart/form-data">
    <input type="hidden" name="capybaraId" value="@Model?.CapybaraID" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="col-9">
                <h2 class="text-primary pl-3">
                   @(Model != null ? "Update" : "Create") Capybara
                </h2>

                <hr />
                <div asp-validation-summary="All" class=" text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span></>
                </div>
                <div class="mb-3">
                    <label asp-for="Age"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span></>
                </div>
                <div class="mb-3">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span></>
                </div>
                <div class="mb-3">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span></>
                </div>
                <div class="form-floating my-2">
                    <div class="form-check">
                        <label class="form-check-label" for="femaleRadio">Female</label>
                        <input type="radio" asp-for="Gender" value="Female" class="form-check-input" />
                    </div>
                    <div class="form-check">
                        <label class="form-check-label" for="maleRadio">Male</label>
                        <input type="radio" asp-for="Gender" value="Male" class="form-check-input"  />
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Image"></label>
                    <input type="file" name="files" id="uploadBox" class="form-control" />
                </div>
                <div class="col-3">
                    @if (Model?.CapybaraID != 0)
                    {
                        <img src="@Model?.Image"  style="border-radius:5px; border:1px solid #bbb9b9; width:100%;" />
                    }
                </div>
            </div>
        </div>
        @if(Model == null)
        {
            <button type="submit" class="btn btn-outline-success mt-3" style="width:150px;">Create</button>
        }
        else
        {
            <button type="submit" class="btn btn-outline-warning mt-3" style="width:150px;">Update</button>
        }

        <a asp-area="" asp-controller="Admin" asp-action="Capybaras" class="btn btn-outline-info mt-3">Back to List</a>
    </div>

</form>