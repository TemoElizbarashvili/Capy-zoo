@using KapyZoo.Shared.Models;
@model IEnumerable<Capybara>

@{
    ViewData["Title"] = "Capybaras list";
}

<div class="container">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6 mt-2">
                <h2>Manage <b>Capybaras</b></h2>
            </div>
            <div class="col-sm-6 mt-2 text-end">
                <a asp-controller="Admin" asp-action="CapybaraUpsert" class="btn btn-outline-success" data-toggle="modal">
                    <i class="fa-solid fa-circle-plus"></i>
                    <span>Add New Capybara in Store</span>
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th>Id</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Price</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-active">
                    <td>@item.CapybaraID</td>
                    <td>@item.Name</td>
                    <td>@item.Gender</td>
                    <td>@item.Age</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-area="" asp-controller="Admin" asp-action="CapybaraUpsert" asp-route-capybaraId="@item.CapybaraID" style="text-decoration:none;" style="width:20px;height:20px" data-toggle="modal">
                            <i class="fa-regular fa-pen-to-square"></i>
                        </a>

                        <a asp-area="" asp-controller="Admin" asp-action="CapybaraDelete" asp-route-capybaraId="@item.CapybaraID" class="" style="width:20px;height:20px" data-toggle="modal">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>