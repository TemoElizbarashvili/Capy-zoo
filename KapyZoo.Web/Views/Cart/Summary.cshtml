@using KapyZoo.Shared.Models;
@model Order

<h2 class="mt-2">Check out now</h2>
<p>Please ener your details, and we'll ship your goods right away!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-controller="Cart" asp-action="Summary" method="post">
    <h3>Ship to</h3>
    <div class="form-group">
        <label>Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span></>
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label>Adress Line 1:</label>
        <input asp-for="addresLine1" class="form-control" />
        <span asp-validation-for="addresLine1" class="text-danger"></span></>
    </div>
    <div class="form-group">
        <label>Adress Line 2:</label>
        <input asp-for="addresLine2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Adress Line 3:</label>
        <input asp-for="addresLine3" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-outline-success mt-2" type="submit" value="Complete Order" />
    </div>
</form>